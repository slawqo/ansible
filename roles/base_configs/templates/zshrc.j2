# On MacOS I need such workaround for pass to have working polish chars
function pass() {
    orig_ctype=$LC_CTYPE
    orig_lang=$LANG
    PASS=$(which -p pass)
    LC_CTYPE=C && LANG=C
    $PASS "$@"
    LC_CTYPE=$orig_ctype&& LANG=$orig_lang
}

